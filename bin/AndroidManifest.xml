<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.berkeley.cs160.howwasyourday"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />

    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:uiOptions="splitActionBarWhenNarrow" >
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.Timeline"
            android:launchMode="singleTop"
            android:label="@string/timeline"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.Post"
            android:label="@string/title_activity_post"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.AddComment"
            android:label="@string/title_activity_add_comment"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.Doodle"
            android:label="@string/title_activity_doodle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.DrawDoodle"
            android:label="@string/title_activity_draw_doodle"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.RecordVideo"
            android:label="@string/title_activity_record_video"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.RecordAudio"
            android:label="@string/title_activity_record_audio"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.LoginPage"
            android:label="@string/title_activity_login_page"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.SharePhoto"
            android:label="@string/title_activity_share_photo"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.RegisterPage"
            android:label="@string/title_activity_register_page"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="edu.berkeley.cs160.howwasyourday.Recap"
            android:label="@string/title_activity_recap"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
